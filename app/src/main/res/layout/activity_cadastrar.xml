<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.alexalves.padariadrivethru.CadastrarActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cabecalho"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:src="@drawable/logo_oficial" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cabecalho"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtNome"
                android:background="@drawable/text"
                android:text="Nome"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNascimento"
                android:layout_below="@+id/txtNome"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:text="Data Nascimento"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtEndereco"
                android:layout_below="@+id/txtNascimento"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:text="EndereÃ§o"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtContato"
                android:layout_below="@+id/txtEndereco"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:text="Telefone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtSenha"
                android:layout_below="@+id/txtContato"
                android:layout_marginTop="20dp"
                android:background="@drawable/text"
                android:text="Senha"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:id="@+id/btnAcessar"
                android:background="@drawable/button"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:shadowColor="#000"
                android:shadowRadius="5"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/txtSenha"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
